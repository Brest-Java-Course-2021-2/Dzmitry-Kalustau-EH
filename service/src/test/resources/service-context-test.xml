<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="categoryDtoDao" class="com.epam.brest.dao.dto.CategoryDtoDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="categoryDtoService" class="com.epam.brest.service.impl.CategoryDtoServiceImpl">
        <constructor-arg name="categoryDtoDao" ref="categoryDtoDao"/>
    </bean>
</beans>
